//- include pug/mixins.pug
mixin additinalModifiers(attribute)
	.additional-modifiers 
		label.header Additional Modifiers
		span Value
		span.dice-label Dice
		input.modifier-input(
			type= "number" 
			name= `attr_${attribute}_additional_mods`
			value= "0"
		)
		div
			input(
				type= "number"
				name= `attr_${attribute}_additional_dice_count`
				value= "0"
				min= "0"
			)
			select
				each dieType in ['d4', 'd6', 'd8', 'd10', 'd12', 'd20']
					option(value=dieType)= dieType
		input(
			type= "hidden"
			name= `attr_${attribute}`
			value= "+0"
		)

.dnd-5e-helper 
	.prof-bonus 
		span.prof-label Proficiency Bonus
		input(
			type= "number"
			name= "attr_proficiency_bonus"
			value= "+2"
		)
	.abilities-and-skills-wrapper 
		.strength-wrapper.ability-wrapper
			.ability-score-and-modifier 
				h3.ability-header Strength
				.ability-modifier 
					input.dice-modifier(
						type= "hidden"
						name="attr_strength_modifier"
						value="+0"
					)
					span.dice-modifier(
						name="attr_strength_modifier"
					)
				input.ability-score(
					type= "number"
					name= "attr_strength"
					value= "10"
				)
			.skills-wrapper 
				label#strength_proficiency_label.skill-header Prof.
				label#strength_modifier_label.skill-header Mod
				label#strength_name_label.skill-header Name
				label#strength_roll_type_label.skill-header Roll Type
				.skill-proficiency-toggle.value-wrapper 
					input(
						type= "hidden"
						name= "attr_strength_proficiency"
						value= "0"
					)
					button(
						type= "action"
						name= "act_strength_proficiency"
						aria-labelledby= "strength_proficiency_label"
					)
				.dice-modifier.value-wrapper 
					span(
						ame= "attr_strength_save"
						aria-labelledby= "strength_modifier_label"
					)
					button(
						type= "action"
						name= "act_strength_save_show_additional_mods_toggle"
					) ?
				button(
					type= "roll"
					name= "roll_strength_save"
					value= "/roll @{strength_save_roll_type} @{strength_save}"
				)
					span.skill-label(
						aria-labelledby= "strength_name_label"
					) Saving Throw
				.skill-advantage-toggle.value-wrapper
					input(
						type= "hidden"
						name= "attr_strength_save_roll_type"
						value= "1d20"
					)
					button(
						type= "action"
						name= "act_strength_save_roll_type"
						aria-labelledby= "strength_roll_type_label"
					)
				input(
					type= "hidden"
					name= "attr_strength_save_show_additional_mods_toggle"
					value= "0"
				)
				+additinalModifiers('strength_save')
